{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@client/*": ["client/src/*"],

      "@shared-utils/*": ["shared/utils/*"],
      "@shared-constants/*": ["shared/constants/*"],

      "@components/*": ["client/src/components/*"],
      "@pages/*": ["client/src/pages/*"],
      "@assets/*": ["client/src/assets/*"],
      "@client-utils/*": ["client/src/utils/*"],
      "@client-constants/*": ["client/src/constants/*"],
      "@hooks/*": ["client/src/hooks/*"],

      "@server/*": ["server/*"],
      "@server-config/*": ["server/config/*"],
      "@routes/*": ["server/routes/*"],
      "@models/*": ["server/models/*"],
      "@controllers/*": ["server/controllers/*"],
      "@server-utils/*": ["server/utils/*"],
      "@server-constants/*": ["server/constants/*"],

      "@docs/*": ["docs/*"]
    },

    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["client/src", "server", "docs", "shared/utils/debug/debugLog.js"],
  "exclude": ["node_modules", "client/dist", "server/dist"]
}
